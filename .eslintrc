{
  "env": {
    "browser": true,
    "node": true,
  },
  "parser": "babel-eslint",
  "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
  "plugins": [
    "react",
    "babel",
  ],
  "rules": {
    "jsx-a11y/href-no-hash": "off",
    "semi": 0,
    "max-len": [1, 400],
    "global-require": 0,
    "react/jsx-filename-extension": ["off" ],
    "no-underscore-dangle": ["off"],
    "react/no-unescaped-entities": ["off"],
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }]
  },
}
